<div class="col-sm-4 no-padding-left">
<%= simple_form_for @course, :html => { :class => 'form-horizontal' } do |f| %>
  
	<% @course.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger">
      <p><%= msg %></p>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name,  input_html: { class: 'form-control', maxlength: 45 } %>
  </div>

  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control', maxlength: 45 } %>
  </div>

  <div class="form-group">
     <%= f.input :status, collection: CourseStatus.to_a, input_html: {class: 'form-control btn dropdown-toggle selectpicker btn-default'} %>
  </div>

	<div class="form-group">
  <%= f.button :submit, :class => 'btn-primary' %>
   
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                courses_path, :class => 'btn btn-default' %>
   </div>
<% end %>
</div>
